#!/usr/bin/env node


var program = require('commander');

program
  .version('0.0.1')
  .option('-C, --chdir <path>', 'change the working directory');

program
  .command('setup')
  .description('run remote setup commands')
  .action(function(){
    console.log('setup');
  });

program
  .command('exec <cmd>')
  .description('run the given remote command')
  .action(function(cmd){
    console.log('exec "%s"', cmd);
  });

program
  .parse(process.argv);
